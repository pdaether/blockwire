{
    "name": "pdaether/blockwire",
    "description": "A block editor made with Livewire. Maintained fork of jeffreyvr/blockwire",
    "keywords": [
        "pdaether",
        "laravel",
        "blockwire"
    ],
    "homepage": "https://github.com/pdaether/blockwire",
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Dahse",
            "email": "public@pd-digital.de",
            "role": "Developer"
        },
        {
            "name": "Jeffrey van Rossum",
            "email": "jeffrey@vanrossum.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "livewire/livewire": "^3.3",
        "spatie/laravel-package-tools": "^1.13.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.34|^3.7",
        "pestphp/pest-plugin-laravel": "^2.0|^3.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0|^2.0",
        "phpstan/phpstan-phpunit": "^1.0|^2.0",
        "phpunit/phpunit": "^10.4|^11.5.3",
        "spatie/laravel-ray": "^1.28",
        "spatie/x-ray": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Pdaether\\BlockWire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pdaether\\BlockWire\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pdaether\\BlockWire\\BlockWireServiceProvider"
            ],
            "aliases": {
                "BlockWire": "Pdaether\\BlockWire\\Facades\\BlockWire"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
